# Neon PostgreSQL (required)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# NextAuth (required for auth)
AUTH_SECRET="generate-with-openssl-rand-base64-32"

# Google OAuth (optional; omit for email-only)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# NextAuth URL (set in Vercel to your production URL)
NEXTAUTH_URL="http://localhost:3000"

# Optional: accept more guess words via Groq free LLM (e.g. "locate"); results cached in valid_guesses
# Get a free key at https://console.groq.com
# GROQ_API_KEY="your-key-from-console-groq-com"
